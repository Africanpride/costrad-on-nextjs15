{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "explainFiles": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/fonts": [
        "./styles/fonts"
      ],
      "@functions*": [
        "./utils/functions/*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@lib/*": [
        "./lib/*"
      ],
      "@assets/*": [
        "./assets/*"
      ],
      "@auth/*": [
        "./auth/*"
      ],
      "@views/*": [
        "./[pathname]/views/*"
      ]
    },
    "moduleResolution": "nodenext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/user.ts",
    "app/api/webhooks/clerk/route.js",
    "app/gsap/page.js"
, "components/tiptap-extension/link-extension.mts", "components/tiptap-extension/trailing-node-extension.mts", "components/tiptap-extension/selection-extension.mts"  ],
  "exclude": [
    "node_modules"
  ]
}
