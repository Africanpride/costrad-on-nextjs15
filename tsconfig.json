{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "explainFiles": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/fonts": ["./styles/fonts"],
      "@functions*": ["./utils/functions/*"],
      "@components/*": ["./components/*"],
      "@/components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@/hooks/*": ["./hooks/*"],
      "@styles/*": ["./styles/*"],
      "@/styles/*": ["./styles/*"],
      "@lib/*": ["./lib/*"],
      "@/lib/*": ["./lib/*"],
      "@assets/*": ["./assets/*"],
      "@/assets/*": ["./assets/*"],
      "@auth/*": ["./auth/*"],
      "@/auth/*": ["./auth/*"],
      "@views/*": ["./[pathname]/views/*"],
      "@/views/*": ["./[pathname]/views/*"]
    },
    "moduleResolution": "nodenext"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/user.ts",
    "app/api/webhooks/clerk/route.js",
    "app/gsap/page.js"
  ],
  "exclude": ["node_modules"]
}
